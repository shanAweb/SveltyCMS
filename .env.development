# Development Environment Configuration
# Copy this file to .env.local and modify as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Development server port (default: 5173)
# If this port is in use, Vite will automatically try the next available port
PORT=5173

# Alternative: Use VITE_PORT for Vite-specific port configuration
VITE_PORT=5173

# Host configuration (use 0.0.0.0 to expose to network)
HOST=localhost
# HOST=0.0.0.0  # Uncomment to allow network access

# =============================================================================
# VITE DEVELOPMENT SETTINGS
# =============================================================================

# Enable/disable HMR (Hot Module Replacement)
VITE_HMR=true

# Force specific port (will fail if port is occupied instead of trying next)
# VITE_FORCE_PORT=true

# Open browser automatically on dev server start
VITE_OPEN=false

# =============================================================================
# SVELTEKIT CONFIGURATION
# =============================================================================

# SvelteKit adapter settings
ADAPTER_HOST=localhost
ADAPTER_PORT=5173

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment mode
NODE_ENV=development
PUBLIC_ENVIRONMENT=development

# Site configuration
SITE_NAME=SveltyCMS Development
HOST_DEV=http://localhost:5173
HOST_PROD=http://localhost:4173

# =============================================================================
# DATABASE CONFIGURATION (Development)
# =============================================================================

# Database type (mongodb, mysql, postgresql, sqlite)
DB_TYPE=mongodb

# MongoDB configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=SveltyCMS_Dev
DB_USER=admin
DB_PASSWORD=admin

# Full MongoDB connection string (alternative to individual settings)
# DB_URL=mongodb://admin:admin@localhost:27017/SveltyCMS_Dev

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret (generate a secure random string for production)
JWT_SECRET_KEY=your-development-jwt-secret-key-change-in-production

# Session configuration
SESSION_EXPIRATION_SECONDS=86400
SESSION_CLEANUP_INTERVAL=60000
MAX_IN_MEMORY_SESSIONS=1000

# Password requirements
PASSWORD_LENGTH=8

# =============================================================================
# EXTERNAL SERVICES (Development/Testing)
# =============================================================================

# Email configuration (development mode)
SMTP_HOST=
SMTP_PORT=587
SMTP_EMAIL=
SMTP_PASSWORD=

# OAuth configuration (optional for development)
USE_GOOGLE_OAUTH=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Redis configuration (optional)
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Mapbox (optional)
USE_MAPBOX=false
MAPBOX_API_TOKEN=
SECRET_MAPBOX_API_TOKEN=

# =============================================================================
# MEDIA & FILE HANDLING
# =============================================================================

# Media storage
MEDIA_FOLDER=static/media
MAX_FILE_SIZE=10485760
BODY_SIZE_LIMIT=104857600

# Image processing
MEDIA_OUTPUT_FORMAT_QUALITY={"format": "webp", "quality": 75}
IMAGE_SIZES={"thumbnail": 150, "card": 600}

# CDN/Media server (leave empty for local storage)
MEDIASERVER_URL=

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Default language
DEFAULT_CONTENT_LANGUAGE=en
AVAILABLE_CONTENT_LANGUAGES=["en", "de", "es"]
BASE_LOCALE=en
LOCALES=["en", "de"]

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log levels
LOG_LEVELS=["info", "error", "warn", "debug"]
LOG_RETENTION_DAYS=7
LOG_ROTATION_SIZE=5242880

# Debug mode
DEBUG=false

# =============================================================================
# FEATURES & TOGGLES
# =============================================================================

# Demo mode
DEMO=true

# 2FA
USE_2FA=false
TWO_FACTOR_AUTH_SECRET=
TWO_FACTOR_AUTH_BACKUP_CODES_COUNT=10

# Archive on delete
USE_ARCHIVE_ON_DELETE=true

# Multi-tenant support
MULTI_TENANT=false

# Database validation
DB_VALIDATION_PROBABILITY=0.1

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Package version
PKG_VERSION=0.0.5

# Seasons (if applicable)
SEASONS=false
SEASON_REGION=

# API integrations (development)
GOOGLE_API_KEY=
TWITCH_TOKEN=
USE_TIKTOK=false
TIKTOK_TOKEN=
LLM_APIS={}

# =============================================================================
# ROLES & PERMISSIONS
# =============================================================================

# Default roles
ROLES=["admin", "editor", "user"]

# Default permissions
PERMISSIONS=["create", "read", "update", "delete"]