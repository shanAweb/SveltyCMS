# Local Development Environment
# This file is gitignored and safe for local modifications

# =============================================================================
# PORT CONFIGURATION - Change this to your preferred port
# =============================================================================

# Primary port setting for Vite dev server
PORT=5173

# Alternative port if above is taken
# PORT=3000
# PORT=8080
# PORT=4000

# Uncomment to force specific port (will fail if occupied)
# VITE_FORCE_PORT=true

# Uncomment to expose to network (accessible from other devices)
# HOST=0.0.0.0

# =============================================================================
# QUICK DEVELOPMENT SETTINGS
# =============================================================================

NODE_ENV=development
SITE_NAME=SveltyCMS Local Dev
HOST_DEV=http://localhost:5173

# Auto-open browser on start
VITE_OPEN=false

# =============================================================================
# DATABASE (Local Development)
# =============================================================================

DB_TYPE=mongodb
DB_HOST=localhost
DB_PORT=27017
DB_NAME=SveltyCMS_Local
DB_USER=admin
DB_PASSWORD=admin

# =============================================================================
# BASIC SECURITY (Development Only)
# =============================================================================

JWT_SECRET_KEY=local-development-secret-key-not-for-production
PASSWORD_LENGTH=6

# =============================================================================
# FEATURES FOR LOCAL DEVELOPMENT
# =============================================================================

DEMO=true
DEBUG=true
USE_REDIS=false
USE_GOOGLE_OAUTH=false
USE_2FA=false

# =============================================================================
# MEDIA SETTINGS
# =============================================================================

MEDIA_FOLDER=static/uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# DEFAULT CONTENT
# =============================================================================

DEFAULT_CONTENT_LANGUAGE=en
AVAILABLE_CONTENT_LANGUAGES=["en"]
LOCALES=["en"]
ROLES=["admin", "editor", "user"]
PERMISSIONS=["create", "read", "update", "delete"]